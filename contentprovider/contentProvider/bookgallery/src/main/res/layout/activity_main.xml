<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView android:layout_width="fill_parent" android:id="@+id/tvtitle"
        android:layout_height="wrap_content" android:text="Please write book title:" />
    <EditText android:layout_width="wrap_content" android:id="@+id/ettitle"
        android:layout_height="wrap_content" />
    <TextView android:layout_width="fill_parent" android:id="@+id/tvprice"
        android:layout_height="wrap_content" android:text="Please write book price:" />
    <EditText android:layout_width="wrap_content" android:id="@+id/etprice"
        android:layout_height="wrap_content" />
    <Button android:layout_width="wrap_content" android:id="@+id/add"
        android:layout_height="wrap_content" android:text="Add" android:gravity="center" android:layout_gravity="center" />
    <Button android:layout_width="wrap_content" android:id="@+id/delete"
        android:layout_height="wrap_content" android:text="Delete an item" android:gravity="center" android:layout_gravity="center" />
    <ListView android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:id="@+id/booklist" />
</LinearLayout>
